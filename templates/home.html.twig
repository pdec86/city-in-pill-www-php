                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled">Disabled</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <a class="btn btn-outline-danger" href="{{ path('app_logout') }}">Logout</a>
                </form>
            </div>
        </div>
    </nav>

    <h1>{{ 'home.welcome'|trans({'%name%': username}, 'messages') }}!</h1>
    <p>You have {{ roles|length }} applicable roles.</p>

    <div id="app">&nbsp;</div>
